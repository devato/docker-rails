default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: postgres
  password: supersecret

development:
  <<: *default
  host: postgres_db # named after the service in docker compose
  database: docker_rails_development

test:
  <<: *default
  database: docker_rails_test
